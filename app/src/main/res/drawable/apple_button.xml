<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State (When button is clicked) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE"/> <!-- Light grey when pressed -->
            <stroke android:width="2dp" android:color="#4285F4"/> <!-- Blue border on press -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Black border -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

</selector>
