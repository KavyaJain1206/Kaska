<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme -->
    <style name="Theme.Kaska" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item> <!-- Primary color -->
        <item name="colorPrimaryVariant">#000000</item> <!-- Darker shade -->
        <item name="colorAccent">#000000</item> <!-- Accent color -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/google_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>
